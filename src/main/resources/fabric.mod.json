{
	"schemaVersion": 1,
	"id": "${mod_id}",
	"version": "${mod_version}",
	"name": "Mirage Minecraft Mod",
	"description": "A real-time AI mod powered by our MirageLSD model that transforms your world as you play.",
	"authors": [
		"Decart"
	],
	"contact": {
		"sources": "https://github.com/DecartAI/mirage-minecraft-mod"
	},
	"license": "MIT",
	"icon": "icon.png",
	"environment": "client",
	"entrypoints": {
		"client": [
			{
				"value": "${mod_package}.OasisClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		{
			"config": "${mod_id}.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"java": ">=21",
		"minecraft": "~${minecraft_version}",
		"fabricloader": "~${fabric_loader_version}",
		"fabric-api": "~${fabric_api_version}",
		"fabric-language-kotlin": "~${fabric_kotlin_version}"
	}
}
